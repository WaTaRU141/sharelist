<div class="list-wrapper">
<div class="container">
<div class="heading">
        <h2>申請リスト</h2>
        </div>


		    <%# page_entries_info @hinverse_holders_relationships %>
		    <% @inverse_holders_relationships.each do |relationship| %>
		    <% if relationship.accept == false %>
			<%= link_to item_path(relationship.item.id) do %>
				<div class="items clearfix">
<div class="item">
 <div class="itemsid item img ">
						 <%= image_tag relationship.item.picture if relationship.item.picture.present? %>
						 </div>
						  <p class="item-info">
						   <span class="item-name">
							<i class="fa fa-tag" aria-hidden="true"> <%= relationship.item.name %></i>
						  </span><br>
						  <span class="area">
							<i class="fa fa-map-marker" aria-hidden="true"> <%= relationship.item.user.useraddress1 %></i><br>
							<i class="fa fa-map-marker" aria-hidden="true"> <%= relationship.item.user.useraddress2 %></i>
						  </span>
						  </p>
							<div class="like-btn-sm">
							<%= link_to "お気に入り", item_favorites_path(relationship.item), method: :post %>
							</div>
				    </div>
				</div>
			<% end %>


			<% else %>

						<div class="items clearfix">
<div class="item">
 <div class="itemsid item img soldout">
								 <%= image_tag relationship.item.picture if relationship.item.picture.present? %>
								 <h3>シェア成立</h3>
								 </div>
									<p class="item-info">
										<span class="item-name">
											<i class="fa fa-tag" aria-hidden="true"> <%= relationship.item.name %></i>
										</span><br>
										<span class="area">
											<i class="fa fa-map-marker" aria-hidden="true"> <%= relationship.item.user.useraddress1 %></i><br>
											<i class="fa fa-map-marker" aria-hidden="true"> <%= relationship.item.user.useraddress2 %></i>
										</span>
									</p>
									<div class="like-btn-sm">
									<%= link_to "お気に入り", item_favorites_path(relationship.item), method: :post %>
									</div>
							</div>
						</div>
								<% end %>
								<% end %>
						<div class="container">
							<div class="bottom">
							<%#= paginate @inverse_holders_relationships, outer_window: 5 %>
							</div>
						</div>
	</div>
</div>





	
