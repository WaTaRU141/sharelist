<div class="profile-wrapper">
<div class="container">
<div class="heading">
<h2>プロフィール設定 <%#= resource_name.to_s.humanize %></h2>
</div>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= devise_error_messages! %>

<div><%= f.label :usericon, "アイコン" %>
        <%= f.file_field :usericon %> 
        <%#= f.text_field :usericon , autofocus: true %>


<div><%= f.label :usermessage, "紹介文" %>
        <%= f.text_field :usermessage , autofocus: true %>

<div><%= f.label :username, "名前" %>
        <%= f.text_field :username , autofocus: true %>

  <div><%= f.label :useraddress1, "住所１（道府県道府県）" %>
        <%= f.text_field :useraddress1 , autofocus: true %>

  <div><%= f.label :useraddress2, "住所２（市区町村）" %>
        <%= f.text_field :useraddress2 , autofocus: true%>


  
  <div class="field">
    <%= f.label :email ,"メールアドレス"%><br />
    <%= f.email_field :email, autofocus: true %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="field">
    <%= f.label :password ,"新しいパスワード（６文字以上）" %> <i>※変更しない場合は空欄のまま</i><br />
    <%= f.password_field :password, autocomplete: "off"  %>
    <% if @minimum_password_length %>
      <br />
      <em><%= @minimum_password_length %> 文字以上</em>
    <% end %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation, "新しいパスワードを再入力" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off" %>
  </div>

  <div class="field">
    <%= f.label :current_password, "設定中のパスワードの入力" %> <i>※本人確認のため現在のパスワードを入力してください</i><br />
    <%= f.password_field :current_password, autocomplete: "off" %>
  </div>

  <div class="actions">
    <%= f.submit "更新" %>
  </div>
<% end %>

<h3>アカウントを削除する</h3>

<%= button_to "アカウントを削除", registration_path(resource_name), data: { confirm: "本当に削除しますか?" }, method: :delete %>
</div>
</div>
