<div class="profile-wrapper">
    <div class="container">
        <div class="heading">
        <h2>プロフィール設定 <%#= resource_name.to_s.humanize %></h2>
        </div>

            <div class="edit-area">
              <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
              <%= devise_error_messages! %>
 
 <div class="field">
              <%= f.label :usericon, "アイコン",class: "use-edit" %>
              <%= f.file_field :usericon %> 
              <%#= f.text_field :usericon , autofocus: true %>
</div>
 
 <div class="field">
              <%= f.label :usermessage, "紹介文",class: "use-edit" %>
              <%= f.text_field :usermessage , autofocus: true,class: "use-edit" %>
              </div>
 
 <div class="field">
              <%= f.label :username, "名前",class: "use-edit" %>
              <%= f.text_field :username , autofocus: true,class: "use-edit" %>
              </div>
 
 <div class="field">
              <%= f.label :useraddress1, "住所１（道府県道府県）" ,class: "use-edit"%>
              <%= f.text_field :useraddress1 , autofocus: true,class: "use-edit" %>
              </div>
 
 <div class="field">
              <%= f.label :useraddress2, "住所２（市区町村）" ,class: "use-edit"%>
              <%= f.text_field :useraddress2 , autofocus: true,class: "use-edit"%>
              </div>


  
  <div class="field">
    <%= f.label :email ,"メールアドレス",class: "use-edit"%><br />
    <%= f.email_field :email, autofocus: true ,class: "use-edit"%>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="field">
    <%= f.label :password ,"新しいパスワード（６文字以上）",class: "use-edit" %> <i>※変更しない場合は空欄のまま</i><br />
    <%= f.password_field :password, autocomplete: "off" ,class: "use-edit" %>
    <% if @minimum_password_length %>
      <br />
      <em><%= @minimum_password_length %> 文字以上</em>
    <% end %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation, "新しいパスワードを再入力" ,class: "use-edit"%><br />
    <%= f.password_field :password_confirmation, autocomplete: "off",class: "use-edit" %>
  </div>

  <div class="field">
    <%= f.label :current_password, "設定中のパスワードの入力" ,class: "use-edit"%> <i>※本人確認のため現在のパスワードを入力してください</i><br />
    <%= f.password_field :current_password, autocomplete: "off" ,class: "use-edit"%>
  </div>

  <div class="actions">
    <%= f.submit "更新" ,class: "request-btn btn-lg"%>
  </div>
<% end %>

<div class="dilate">
<h2>アカウントを削除する</h2>
</div>

<%= button_to "アカウントを削除", registration_path(resource_name), data: { confirm: "本当に削除しますか?" }, method: :delete ,class: "request-btn btn-lg"%>
</div>
</div>
</div>
